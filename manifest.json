{
  "manifest_version": 3,
  "name": "Adult Content Tracker",
  "description": "Track visits to adult content sites, see your clean streak, and get notified when your streak breaks.",
  "version": "0.1.0",
  "author": "NNN Tracker",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Adult Content Tracker",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "notifications",
    "webNavigation",
    "tabs",
    "webRequest",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://*.supabase.co/*"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "adult-tracker@example.com",
      "strict_min_version": "109.0"
    }
  }
}


